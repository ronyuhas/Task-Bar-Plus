<Window x:Class="TaskBarPlus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskBarPlus"
        xmlns:controls="clr-namespace:TaskBarPlus.Views.Controls"
        mc:Ignorable="d"
        Title="MainWindow"         
        WindowStyle="None"
        ResizeMode="CanResize"
        Topmost="True"
        AllowsTransparency="True"
        Background="Transparent"
        MinWidth="100"
        Width="200"
        Height="{x:Static SystemParameters.PrimaryScreenHeight}"
        PreviewMouseWheel="Window_PreviewMouseWheel"
        Left="0"
        Top="0"
        ShowInTaskbar="False">
    <Window.Resources>

    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <controls:Utilities x:Name="UtilitiesControl" Grid.Row="0" Margin="2" Background="Azure"/>
        <Border Grid.Row="1" Background="#DD1E1E1E">
            <ListView x:Name="AppListView" ItemsSource="{Binding AppItems}" 
                      BorderThickness="0" 
                      Background="Transparent" 
                      SelectedItem="{Binding SelectedAppItem}"
                      MouseDoubleClick="ListView_MouseDoubleClick"
                      KeyDown="ListView_KeyDown">
                <ListView.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.ContainerStyle>
                            <Style TargetType="{x:Type GroupItem}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type GroupItem}">
                                            <Expander IsExpanded="True" Margin="0,5,0,0" >
                                                <Expander.Header>
                                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" 
                                                               FontSize="{Binding DataContext.FontSize, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                               Foreground="LightGray" Margin="5,0,0,0"/>
                                                </Expander.Header>
                                                <ItemsPresenter />
                                            </Expander>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </GroupStyle.ContainerStyle>
                    </GroupStyle>
                </ListView.GroupStyle>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <EventSetter Event="MouseLeftButtonUp" Handler="AppListViewItem_Click"/>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Image Source="{Binding Icon}"
       Width="{Binding DataContext.IconSize, RelativeSource={RelativeSource AncestorType=Window}}"
       Height="{Binding DataContext.IconSize, RelativeSource={RelativeSource AncestorType=Window}}"
       Margin="10,0,5,0"/>

                            <TextBlock Text="{Binding Title}" Foreground="White" VerticalAlignment="Center" 
                                       FontSize="{Binding DataContext.FontSize, RelativeSource={RelativeSource AncestorType=Window}}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>
        <Border Width="5" Grid.RowSpan="2"
        HorizontalAlignment="Right"
        Cursor="SizeWE"
        Background="Transparent"
        MouseDown="ResizeBorder_MouseDown"
        MouseMove="ResizeBorder_MouseMove"
        MouseUp="ResizeBorder_MouseUp"/>
    </Grid>
</Window>
